{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["index.ts", "parse.ts", "slimgify.ts", "types.ts"],
  "exclude": ["node_modules", "dist", "example.sg", "eslint.config.ts", "vitest.config.ts", "parser.test.ts"]
}

